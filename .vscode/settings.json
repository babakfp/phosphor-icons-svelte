{
    "deno.enable": true,
    "editor.defaultFormatter": "denoland.vscode-deno",
    "deno.disablePaths": ["./kit"],
    "search.exclude": {
        // Exclude search results from the core folder.
        "core": true
    },
    // Keep the explorer clean by only showing the files that have been used.
    "files.exclude": {
        "core/.github": true,
        "core/meta": true,
        "core/raw": true,
        "core/scripts": true,
        "core/src": true,
        "core/.gitignore": true,
        "core/.prettierrc": true,
        "core/CONTRIBUTING.md": true,
        "core/LICENSE": true,
        "core/package.json": true,
        "core/pnpm-lock.yaml": true,
        "core/README.md": true,
        "core/tsconfig.json": true,
        "core/vite.config.ts": true
    },
    // Prevent accidentally editing these files.
    "files.readonlyInclude": {
        "deno.lock": true,
        "core": true,
        "kit/src/lib": true,
        "package": true,
        "README.md": true
    }
}
