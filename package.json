{
    "scripts": {
        "build": "pnpm build-components && pnpm build-dist && pnpm build-package",
        "build-components": "node ./src/build-components.ts",
        "build-dist": "cd kit && pnpm i && pnpm package",
        "build-package": "pnpm update-readme && node ./src/dist-to-package.ts",
        "update-readme": "node ./src/update-readme.ts",
        "publish": "pnpm build && cd package && pnpm publish",
        "format": "prettier -w ."
    },
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "4.6.2",
        "@phosphor-icons/core": "2.1.1",
        "@types/node": "24.3.0",
        "case": "1.6.3",
        "html-minifier-terser": "7.2.0",
        "log-update": "6.1.0",
        "prettier": "3.6.2",
        "svgo": "4.0.0"
    }
}
