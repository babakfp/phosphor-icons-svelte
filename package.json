{
    "scripts": {
        "build": "pnpm buildComponents && pnpm buildDist && pnpm buildPackage",
        "buildComponents": "node ./bin/build-components.ts",
        "buildDist": "cd kit && pnpm i && pnpm package",
        "buildPackage": "pnpm updateReadme && node ./bin/build-package.ts",
        "updateReadme": "node ./bin/update-readme.ts",
        "buildAndPublish": "pnpm build && cd package && pnpm publish",
        "format": "prettier -w ."
    },
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "4.6.2",
        "@phosphor-icons/core": "2.1.1",
        "@types/node": "24.3.0",
        "case": "1.6.3",
        "html-minifier-terser": "7.2.0",
        "log-update": "6.1.0",
        "prettier": "3.6.2",
        "svgo": "4.0.0"
    }
}
